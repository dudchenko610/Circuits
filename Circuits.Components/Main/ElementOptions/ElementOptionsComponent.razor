@using Circuits.ViewModels.Entities.Elements
<div class="element-options">
    <div class="line">
        <div class="text noselectable-text">Number:</div>
        <div class="input-wrapper">
            <input type="number"
                   placeholder="Type Number"
                   @bind-value="SelectedElement!.Number"
                   @bind-value:event="oninput"/>
        </div>
    </div>

    @switch (SelectedElement)
    {
        case Resistor resistor:
            <div class="line">
                <div class="text noselectable-text">Resistance:</div>
                <div class="input-wrapper">
                    <BCHNumberInput TValue="double"
                                    @bind-Value="resistor.Resistance"/>
                </div>
            </div>
            break;
            
        case Capacitor capacitor:
            <div class="line">
                <div class="text noselectable-text">Capacity:</div>
                <div class="input-wrapper">
                    <BCHNumberInput TValue="double"
                                    @bind-Value="capacitor.Capacity"/>
                </div>
            </div>
            break;
            
        case Inductor inductor:
            <div class="line">
                <div class="text noselectable-text">Inductance:</div>
                <div class="input-wrapper">
                    <BCHNumberInput TValue="double"
                                    @bind-Value="inductor.Inductance"/>
                </div>
            </div>
            break;
            
        case DCSource dcSource:
            <div class="line">
                <div class="text noselectable-text">Voltage:</div>
                <div class="input-wrapper">
                    <BCHNumberInput TValue="double"
                                    @bind-Value="dcSource.Voltage"/>
                </div>
            </div>
            break;
    }

    <div class="line">
        <div class="text noselectable-text">Direction:</div>
        <div class="value noselectable-text">@SelectedElement.Direction</div>
    </div>
</div>

<style>
    .element-options > .line > .input-wrapper > input {
        font-family: Nunito;
        font-size: 12px;
        font-style: normal;
        font-weight: 400;
        line-height: 19px;
        letter-spacing: 0.3428572118282318px;
        color: #030229;
        caret-color: #030229;
        outline: none;
        text-indent: 14px;
                
        flex: 1 1;
        height: 18px;
        background: transparent;
        border: none;
        margin: auto;
        padding: 0;
    }
                
    .element-options > .line > .input-wrapper > input::placeholder {
        color: rgba(3, 2, 41, 0.4);
    }
</style>