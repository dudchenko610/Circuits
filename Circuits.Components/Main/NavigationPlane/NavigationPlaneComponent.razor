<div class="navigation-cnt">
    <div class="control-block">

        @ControlTemplate

        <div class="icon min"
             @onmousedown="async () => { await OnZoomDownAsync(-0.1f); }"
             @onmouseup="OnZoomUp"
             @onmouseout="OnZoomUp">
            <div class="noselectable-text">-</div>
        </div>
        <div class="icon mag"
             @onmousedown="async () => { await OnZoomDownAsync(+0.1f); }"
             @onmouseup="OnZoomUp"
             @onmouseout="OnZoomUp">
            <div class="noselectable-text">+</div>
        </div>
    </div>

    <div 
        id="@_wrapperId" 
        class="scroll-cnt navigation-cs-container" 
        @onextmousewheel="OnMouseWheel">

        <div id="@_navigationId"
             @onmousedown="OnMouseDown"
             @onmouseup="OnMouseLeaveUp"
             @onmouseleave="OnMouseLeaveUp"
             class="scroller navigation-cs-panel"
             style="@($"width: {_size.X.ToString(_nF)}px; height: {_size.Y.ToString(_nF)}px; " + $"transform: translate({_pos.X.ToString(_nF)}px, {_pos.Y.ToString(_nF)}px) " + $"scale({_scale.ToString(_nF)}, {_scale.ToString(_nF)}); " + $"{(_dragStarted ? "transition: transform 0s; cursor: move;" : "")}")">

            @ContentTemplate(_navigationPlaneContext)

            @*<div class="marker" style="@($"left: {(_zoomTarget.X).ToString(_nF)}px; top: {(_zoomTarget.Y).ToString(_nF)}px;")"></div>*@
        </div>
        
        <div 
            class="scrollbar horizontal" 
            style="@($"width: calc((100% - 20px) * ({(_viewPortSize.X / (_size.X * _scale)).ToString(_nF)})); left: calc(10px + (100% - 20px) * {((-_pos.X / _scale) / _size.X).ToString(_nF)});")"></div>
        <div 
            class="scrollbar vertical"
            style="@($"height: calc((100% - 20px) * ({(_viewPortSize.Y / (_size.Y * _scale)).ToString(_nF)})); top: calc(10px + (100% - 20px) * {((-_pos.Y / _scale) / _size.Y).ToString(_nF)});")"></div>

    </div>
</div>