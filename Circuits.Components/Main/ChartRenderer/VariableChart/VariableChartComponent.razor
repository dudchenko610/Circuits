<BCHModal @ref="_bchModal"
          Width="600px"
          Height="50%"
          ShowOverlay="false"
          X="@($"{_pos.X.ToString(_nF)}px")"
          Y="@($"{_pos.Y.ToString(_nF)}px")"
          ZIndex="_zIndex"
          Show="true">
    <div id="@_chartContainerId" 
         class="chart-wrapper">
        <div id="@_controlPanelId"
             class="control-panel">
            <div class="close-btn" @onclick="CloseGraph"></div>
        </div>
        <div class="graph-wrapper">
            <div class="graph">
                <BCHGraph2D DataArray="_data"
                            CellXValuesCount="2"
                            XLabel='(i => $"{2 * i * (ChartInfo.SolverState.DeltaTime / 0.001f)} ms")'
                            CellYValues="0.1f"
                            YLabel='(i => $"{0.1f * i} {ChartInfo.VerticalLetter}")'
                            FuncModifier="ChartInfo.FuncModifier"/>
            </div>
        </div>
    </div>
</BCHModal>