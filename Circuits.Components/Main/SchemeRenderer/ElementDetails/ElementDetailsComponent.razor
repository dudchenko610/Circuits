<div class="element-details @GetTypeClass()">
    
    @foreach (var circuitDir in _circuitDirections)
    {
        <div class="@($"arrow circuit {(circuitDir.Reversed ? "reverse" : "")}")"></div>
    }
    
    @if (_showBranchDirection is not null)
    {
        <div class="@($"arrow branch {(_showBranchDirection.Value ? "reverse" : "")}")"></div>
    }
    
</div>