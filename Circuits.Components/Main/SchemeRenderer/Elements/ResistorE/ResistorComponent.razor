@using Circuits.ViewModels.Entities.Elements
<div @key="@Resistor"
     draggable="true"
     @ondragenter="() => { }"
     @ondragenter:preventDefault
     @onextdragstart="OnDragStart"
     @onextdragstart:preventDefault="@_dragAllowed"
     @onextdragend="OnDragEnd"
     class="@($"resistor element {(_horizontal ? "horizontal" : "vertical")} {(_selectedElement == Resistor ? "selected" : "")} {(_draggingElement == Resistor && _firstDragOver ? "dragging" : "")} {(_eventsDisabled ? "disabled" : "")}")"
     style="@($"left: {Resistor.P1.X * CellSize}px; top: {Resistor.P1.Y * CellSize}px; width: {Math.Abs(Resistor.P2.X * CellSize - Resistor.P1.X * CellSize)}px; height: {Math.Abs(Resistor.P2.Y * CellSize - Resistor.P1.Y * CellSize)}px;")">

    <div @onclick="OnElementClicked"
         @onclick:stopPropagation
         onmousedown="event.stopPropagation()"
         onmousemove="event.preventDefault()"
         class="resistor-content">

        <div class="circle"></div>
        <div class="circle"></div>

        <div class="block"></div>
    </div>

</div>

@if (_draggingElement == Resistor && _firstDragOver)
{
    var draggingElement = (Resistor)_draggingElement;

    <div class="@($"resistor dragged {(_horizontal ? "horizontal" : "vertical")} {(_selectedElement == draggingElement ? "selected" : "")}")"
         style="@($"left: {_draggingPos.X.ToString(_nF)}px; top: {_draggingPos.Y.ToString(_nF)}px; width: {Math.Abs(draggingElement.P2.X * CellSize - draggingElement.P1.X * CellSize)}px; height: {Math.Abs(draggingElement.P2.Y * CellSize - draggingElement.P1.Y * CellSize)}px;")">

        <div class="resistor-content">
            <div class="circle"></div>
            <div class="circle"></div>
            
            <div class="block"></div>
        </div>

    </div>
}