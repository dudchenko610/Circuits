@using Circuits.ViewModels.Entities.Elements
@using Circuits.Shared.Extensions

@{
    var pos = GetPosition();
}

<div @key="@Capacitor"
     draggable="true"
     @ondragenter="() => { }"
     @ondragenter:preventDefault
     @onextdragstart="OnDragStart"
     @onextdragstart:preventDefault="@_dragAllowed"
     @onextdragend="OnDragEnd"
     class="@($"capacitor element {(_selectedElement == Capacitor ? "selected" : "")} {(_draggingElement == Capacitor && _firstDragOver ? "dragging" : "")} {(_eventsDisabled ? "disabled" : "")} {(HighlightService.IsHighlighted(Capacitor) ? "highlighted" : "")}")"
     style="@($"left: {pos.X}px; top: {pos.Y}px; width: {GetWidth()}px; transform: translateX(2px) rotate({Capacitor.Direction.GetValue<int, DirectionValueAttribute>(x => x.Angle)}deg);")">

    <div @onclick="OnElementClickedAsync"
         @onclick:stopPropagation
         onmousedown="event.stopPropagation()"
         onmousemove="event.preventDefault()"
         class="capacitor-content">

        <div class="circle"></div>
        <div class="circle"></div>

        <div class="block">
            <div class="delimiter"></div>
            <div class="delimiter"></div>
        </div>
    </div>

    <ElementDetailsComponent Element="Capacitor"/>

</div>

@if (_draggingElement == Capacitor && _firstDragOver)
{
    var draggingElement = (Capacitor)_draggingElement;
    var dragPos = GetPosition(true);

    <div class="@($"capacitor dragged {(_selectedElement == draggingElement ? "selected" : "")} {(HighlightService.IsHighlighted(Capacitor) ? "highlighted" : "")}")"
         style="@($"left: {dragPos.X}px; top: {dragPos.Y}px; width: {GetWidth()}px; transform: translate({_draggingPos.X.ToString(_nF)}px, {_draggingPos.Y.ToString(_nF)}px) rotate({Capacitor.Direction.GetValue<int, DirectionValueAttribute>(x => x.Angle)}deg);")">

        <div class="capacitor-content">
            <div class="circle"></div>
            <div class="circle"></div>

            <div class="block">
                <div class="delimiter"></div>
                <div class="delimiter"></div>
            </div>
        </div>

    </div>
}