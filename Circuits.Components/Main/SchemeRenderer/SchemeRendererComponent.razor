<div class="scheme-renderer-container" @onextmousemove="OnMouseMove">
    @for (int i = 0; i < 3000 / 30 + 5; i++)
    {
        <div class="horizontal-delimiter"
             style="@($"top: calc(30px * ({i - 5}));")">
        </div>
    
        <div class="vertical-delimiter"
             style="@($"left: calc(30px * ({i - 5}));")">
        </div>
    }
</div>



